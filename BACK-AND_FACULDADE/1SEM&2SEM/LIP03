package com.exemplo;

import java.util.Scanner;

public class test {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite um numero: ");
        int numero = scanner.nextInt();
        for(int i = 0; i < 11; i++) {
        	System.out.println(numero + "x" + i + "=" + (numero*i));
        }

                scanner.close();
    }
}
